{
  "name": "epidemic-sim",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for the epidemic simulation platform (Next.js web, FastAPI API, Python worker, shared schemas).",
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace web",
    "build:web": "npm run build --workspace web",
    "lint:web": "npm run lint --workspace web",
    "typecheck:web": "npm run typecheck --workspace web",
    "dev": "npm-run-all --parallel dev:web",
    "build": "npm-run-all build:schemas build:web",
    "build:schemas": "npm run build --workspace @epidemic-sim/shared-schemas",
    "lint": "npm-run-all lint:schemas lint:web",
    "lint:schemas": "npm run lint --workspace @epidemic-sim/shared-schemas",
    "typecheck": "npm-run-all typecheck:schemas typecheck:web",
    "typecheck:schemas": "npm run typecheck --workspace @epidemic-sim/shared-schemas",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  }
}
